<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textColor="#b00b13"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:text="HOSTEL"
        android:id="@+id/tv11"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <RadioGroup
        android:id="@+id/radiogrouphostel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="AIBAAN"
            android:id="@+id/radiobuttonaibaan" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="BEAUKI"
            android:id="@+id/radiobuttonbeauki" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="CHIMAIR"
            android:id="@+id/radiobuttonchimair" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="DUVEN"
            android:layout_marginTop="10dp"
            android:id="@+id/radiobuttonduven" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="EMIET"
            android:id="@+id/radiobuttonemiet" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="FIRPEAL"
            android:layout_marginTop="10dp"
            android:id="@+id/radiobuttonfirpeal" />

    </RadioGroup>

</LinearLayout>
